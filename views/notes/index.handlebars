{{#each ideas}}
<div class="container">
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <div class="col-xs-12">
       <a href="/notes/edit/{{id}}" class="btn btn-secondary btn-block">Tweak Note</a> 
    </div>
    
</div>
    
</div>
{{else}}
<p>No Notes available to view</p>
{{/each}}